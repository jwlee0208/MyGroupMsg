<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.87"
                android:background="@drawable/btn_click"
                android:text="Initiate" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_weight="0.50"
                android:background="@drawable/btn_click"
                android:text="Select Receiver" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.00"
            android:height="50dip"
            android:padding="5dp"
            android:text="Convert to selected receiver&apos;s name, if you insert to &apos;##&apos; character"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:padding="5dp"
            android:text="Please, Write your message."
            android:textColor="#87cefa" >

<!--                 <requestFocus /> -->
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="177dp"
                android:layout_height="48dp"
                android:layout_weight="0.98"
                android:background="@drawable/btn_click"
                android:text="Send" />

            <Button
                android:id="@+id/modifyReceiverBtn"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:layout_weight="22.50"
                android:background="@drawable/btn_click"
                android:text="Modify Receiver List" />
        </LinearLayout>

</LinearLayout>